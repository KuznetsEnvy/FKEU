{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<footer id="page-footer" class="page-footer">

  <div class="container">    
    <div class="row section padless-top"> 
    	<div class="half column first">
 			{% if settings.use_logo and settings.show_footer_logo %}
          		<div class="logo-column column">
            {% comment %}ly_asset_replace_for_[ 'footer_logo.png' | asset_url | img_tag | link_to: shop.url ]_begin{% endcomment %}{% assign ly_asset = 'footer_logo.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag | link_to: shop.url }}{% comment %}ly_asset_replace_end{% endcomment %}
          </div>
          	{% endif %} 
             <ul class="plain inline list-divide">
                    {% for link in linklists.footer-2.links %}
                    <li>{{ link.title | link_to: link.url }}</li>
                    {% endfor %}
             </ul>     
             <div class="copy">{% comment %}ly_i18n_replace_for_[ 'layout.footer.copyright' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.footer.copyright' | t }}{% endcapture %}{% include 'ly-static-string' with '2473640' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} &copy; {{ "now" | date: "%Y" }} {{ langify_shop_name }}.</div>   
        </div>     
        <div class="half column second">
        	
            {% if settings.footer_display_newsletter %}
            	{% if settings.newsletter_title %}<p class="newsletter-title">{% comment %}ly_new_settings_replace_for_[ settings.newsletter_title ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id2473639"] %}{% assign ly_translation = shop.metafields[namespace]["id2473639"] %}{% else %}{% assign ly_translation = settings.newsletter_title %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</p>{% endif %}
	            {% include 'mailing-signup' %}
            {% endif %}
            <div class="social-column align-left-desktop {% if settings.footer_display_newsletter %}half column{% else %}full column{% endif %}">          
              {% include 'social-links' %}
            </div>
            
            
            <div class="inline-item right last payment-methods">
      	
        {% comment %}
        	{% for type in shop.enabled_payment_types %}
            <img src="{{ type | payment_type_img_url }}" />         
            {% endfor %}          
            <img src="{% comment %}ly_asset_replace_for_[ 'payment.jpg' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'payment.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" />
        {% endcomment %}    
      </div>
        </div>
      
    </div>
    
    {% if settings.footer_complexity == 'kitchen_sink' %}
    <div class="row section padless-top">
      
      {% if settings.use_logo and settings.show_footer_logo %}
      <div class="logo-column column">
        {% comment %}ly_asset_replace_for_[ 'footer_logo.png' | asset_url | img_tag | link_to: shop.url ]_begin{% endcomment %}{% assign ly_asset = 'footer_logo.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag | link_to: shop.url }}{% comment %}ly_asset_replace_end{% endcomment %}
      </div>
      {% endif %}
      
      <div class="text-column {% unless settings.use_logo and settings.show_footer_logo %}occupies-logo{% endunless %} column rte">
        {% comment %}ly_code_replace_for_[ pages[settings.footer_page].content ]_begin{% endcomment %}{% include 'ly-content' with pages[settings.footer_page] %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}
      </div>
      
      <div class="links-column column">
        <ul class="plain">
          {% for link in linklists.footer.links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="links-column column">
        <ul class="plain">
          {% for link in linklists[settings.footer_linklist2].links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="links-column column">
        <ul class="plain">
          {% for link in linklists[settings.footer_linklist3].links %}
          <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
          {% endfor %}
        </ul>
      </div>
      
    </div>
    
    {% else %}
    
    {% comment %}
    <div class="">
      <ul class="plain inline list-divide">
        {% for link in linklists.footer.links %}
        <li>{% comment %}ly_code_replace_for_[ link.title | link_to: link.url ]_begin{% endcomment %}{% include 'ly-title' with link %}{{ ly_translation | link_to: link.url }}{% comment %}ly_code_replace_end{% endcomment %}</li>
        {% endfor %}
      </ul>
    </div>
	{% endcomment %}
    
    {% endif %}
    
    {% comment %}
        <div class="inline-row spaced">
              <div class="inline-item left">    
            <div class="theme-author">
              {% if settings.show_theme_author %}{% comment %}ly_i18n_replace_for_[ 'layout.footer.theme_by_html' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.footer.theme_by_html' | t }}{% endcapture %}{% include 'ly-static-string' with '2473641' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}{% endif %}
    
            </div>
          </div>
        </div>
    {% endcomment %}
    
  </div>
  <a class="hash-link" href="#toolbar"><i class="icon-arrow3-up"></i></a>
</footer>
{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% assign mod4 = forloop.index | modulo: 4 %}
{% assign mod3 = forloop.index | modulo: 3 %}
{% assign mod2 = forloop.index | modulo: 2 %}
<div class="article {{ article-block | default: 'flex column max-cols-4' }} {% if mod2 == 1 %} nth-2{% endif %}{% if mod3 == 1 %} nth-3{% endif %}{% if mod4 == 1 %} nth-4{% endif %}">

  {% if article.excerpt != blank %}
    {% include 'split_images_from_content' with article.excerpt %}
    <div class="header-image">{{ split_images | link_to: article.url }}</div>
    {% capture article_excerpt %}{{ split_content }}{% endcapture %}
  {% else %}
    {% capture article_excerpt %}<div class="rte">{% comment %}ly_code_replace_for_[ article.excerpt_or_content ]_begin{% endcomment %}{% include 'ly-excerpt_or_content' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</div>{% endcapture %}
  {% endif %}

  <div class="reading-column">
    <h2>{% comment %}ly_code_replace_for_[ article.title | link_to: article.url ]_begin{% endcomment %}{% include 'ly-title' with article %}{{ ly_translation | link_to: article.url }}{% comment %}ly_code_replace_end{% endcomment %}</h2>

    <div class="excerpt rte">
      {{ article_excerpt }}
    </div>

    {% if settings.blog_show_meta_on_listing %}
    <div class="lightly-spaced-row">
      {% if settings.show_gravatars and article-block contains 'full' %}
      <span class="gravatar">
        <img src="//www.gravatar.com/avatar/{{ article.user.email | remove: ' ' | strip_newlines | downcase | md5 }}" alt="{{ article.author }}" />
      </span>
      {% endif %}

      <div class="article-meta">
        {% assign published_at = article.published_at | date: format: 'month_date_year' %}
        <div class="date">{% comment %}ly_i18n_replace_for_[ 'blogs.article.posted_on_date' | t: date: published_at  ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.article.posted_on_date' | t: date: published_at  }}{% endcapture %}{% include 'ly-static-string' with '2473610' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = published_at   %}{% assign ly_template = ly_template | replace: '[[date]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</div>
        {% if settings.blog_show_author %}<div class="author">{{ article.author }}</div>{% endif %}
        {% if article.comments_enabled? %}
        {% if article.comments_count > 0 or settings.blog_show_comment_count_if_zero %}
        <div class="comments-count">{% comment %}ly_i18n_replace_for_[ 'blogs.comments.comments_with_count' | t: count: article.comments_count ]_begin{% endcomment %}{% if article.comments_count  == 0 %}{% capture ly_template %}{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}{% endcapture %}{% include 'ly-static-string' with '2473612' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = article.comments_count  %}{% assign ly_template = ly_template | replace: '[[count]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% elsif article.comments_count  == 1 %}{% capture ly_template %}{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}{% endcapture %}{% include 'ly-static-string' with '2473611' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = article.comments_count  %}{% assign ly_template = ly_template | replace: '[[count]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% elsif article.comments_count  == 2 %}{% capture ly_template %}{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}{% endcapture %}{% include 'ly-static-string' with '2473612' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = article.comments_count  %}{% assign ly_template = ly_template | replace: '[[count]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% else %}{% capture ly_template %}{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}{% endcapture %}{% include 'ly-static-string' with '2473612' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% assign replacement = article.comments_count  %}{% assign ly_template = ly_template | replace: '[[count]]', replacement %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</div>
        {% endif %}
        {% endif %}
      </div>
    </div>
    {% endif %}
    
    {% if settings.blog_show_tags_on_listing and template contains 'blog' %}
    {% capture tag_html %}
    <div class="article-tags lightly-spaced-row">
      {% comment %}ly_i18n_replace_for_[ 'blogs.general.tagged' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.general.tagged' | t }}{% endcapture %}{% include 'ly-static-string' with '2473615' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
      {% for tag in article.tags %}
      {% unless tag contains 'meta-' %}<span class="tag">{{ tag | link_to_tag: tag }}</span>{% endunless %}{% unless forloop.last %},{% endunless %}
      {% endfor %}
    </div>
    {% endcapture %}
    {% if tag_html contains 'span' %}{{ tag_html }}{% endif %}
    {% endif %}
    
    <a class="more-link" href="{{ article.url }}">{% comment %}ly_i18n_replace_for_[ 'blogs.general.read_more' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.general.read_more' | t }}{% endcapture %}{% include 'ly-static-string' with '2473616' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>
  </div>
</div>
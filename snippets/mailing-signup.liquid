{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% if settings.footer_display_newsletter %}
<div id="mailing-list">
  {% if settings.mailing_list_form_action == empty %}
    {% form 'customer' %}
      {% if form.posted_successfully? %}
  		<div class="notification">
          <h4 class="no-margin">{% comment %}ly_i18n_replace_for_[ 'layout.signup.post_success' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.signup.post_success' | t }}{% endcapture %}{% include 'ly-static-string' with '4456804' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h4>
  		</div>
        <script>location.hash='mailing-list'</script>
      {% else %}
        <input type="hidden" id="contact_tags" name="contact[tags]" value="prospect,newsletter"/>
    	<div class="input-row inline-input-button">
          <input type="email" placeholder="{% comment %}ly_i18n_replace_for_[ 'layout.signup.email' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.signup.email' | t }}{% endcapture %}{% include 'ly-static-string' with '4456805' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" class="required" value="" id="mailinglist_email" name="contact[email]" />
          <input type="submit" value="{% comment %}ly_i18n_replace_for_[ 'layout.signup.button' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.signup.button' | t }}{% endcapture %}{% include 'ly-static-string' with '4456806' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" />
        </div>
        {% if form.errors %}
  		<script>location.hash='mailing-list'</script>
        <div class="notification errors">
          {% for field in form.errors %}
          <div>{{ form.errors.messages[field] }}</div>
          {% endfor %}
        </div>
        {% endif %}
      {% endif %}
    {% endform %}
  {% else %}
    <form action="{{ settings.mailing_list_form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
      <div class="input-row inline-input-button">
        <input type="email" class="required email" placeholder="{% comment %}ly_i18n_replace_for_[ 'layout.signup.email' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.signup.email' | t }}{% endcapture %}{% include 'ly-static-string' with '4456805' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" value="" id="mce-EMAIL" required name="EMAIL" />
        <input type="submit" name="subscribe" value="{% comment %}ly_i18n_replace_for_[ 'layout.signup.button' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'layout.signup.button' | t }}{% endcapture %}{% include 'ly-static-string' with '4456806' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" />
      </div>
    </form>
  {% endif %}
</div>
{% endif %}
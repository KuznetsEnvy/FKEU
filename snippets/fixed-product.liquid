{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<div class="js-btn-other btn-other hide-for-large-up fix">
  <div class="btn-other__inner">
    <div class="span12">
    <div class="other-data">
    <img class="product-image" src="{{ featured_image | img_url: 'thumbnail' }}" alt="{% comment %}ly_code_replace_for_[ product.title ]_begin{% endcomment %}{% include 'ly-title' with product %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}">
      <h1 class="product-title" itemprop="name">
        {% if product.title contains 'Aaron Kai' %}
        {% assign title = product.title | split: ' ' %}
        {% assign s =  title | size %}
        <span style="font-weight:bold;">
          <ly-as-4456796>Aaron Kai</ly-as-4456796>
        </span>
        {% for i in (2..s) %}
        {{ title[i] }}
        {% endfor %}
        {% else %}
        {% assign title = product.title | split: ' ' %}
        {% assign s =  title | size %}
        <span style="font-weight:bold;">
          {{ title[0] }}
        </span>
        {% for i in (1..s) %}
        {{ title[i] }}
        {% endfor %}
        {% endif %}
      </h1>
      <div class="product-price js-det-price "> {% assign geolizr_price =  product.price  %}{% include 'geolizr-currency' with geolizr_price %}{{ product.price | money | prepend: geolizr_prepend_code | append: geolizr_append_code }} </div>
    </div>
    {% if product.available %}
    <form class="product-form" id="product-form" action="/cart/add" method="post" enctype="multipart/form-data" data-product-id="{{ product.id }}">
      <input type="hidden" name="quantity" value="1" />
	  <input type="hidden" name="id[]" value="{{ product.selected_or_first_available_variant.id }}">
      <button name="add" class="buy-now" id="add">{% comment %}ly_i18n_replace_for_[ 'products.product.add_to_cart_html' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.product.add_to_cart_html' | t }}{% endcapture %}{% include 'ly-static-string' with '4456797' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</button>
    </form>
    {% else %}
      <div class="rte">
        {% comment %}ly_i18n_replace_for_[ 'products.product.product_unavailable_html' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'products.product.product_unavailable_html' | t }}{% endcapture %}{% include 'ly-static-string' with '4456798' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}
      </div>
    {% endif %}
    </div>
  </div>
</div>
<script type="application/javascript">
   var st = $(window).scrollTop();
	$(window).scroll( function() {
      //js-btn-daddy-mobile
	  if ( $('.js-btn-daddy').height() > 0 ) {
		if ( st >= $('.js-btn-daddy').offset().top + $('.js-btn-daddy').height() - 53 ) {
		  $('.js-btn-other').addClass('is-active');
		} else {
		  $('.js-btn-other.is-active').removeClass('is-active');
		}
	  }else if( $('.js-btn-daddy-mobile').height() > 0 ) {
		if ( st >= $('.js-btn-daddy-mobile').offset().top + $('.js-btn-daddy-mobile').height() - 53 ) {
		  $('.js-btn-other').addClass('is-active');
		} else {
		  $('.js-btn-other.is-active').removeClass('is-active');
		}
	  }
	  st = $(window).scrollTop();
	});
</script>